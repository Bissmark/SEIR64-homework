<h1>Edit Team</h1>

<form action="/teams/<%= @team.id %>" method="post">
    <label>
        Name:
        <input name="name" required placeholder="Liverpool" value="<%= @team.name %>">
    <label>

    <label>
        Country:
        <input name="country" required placeholder="England" value="<%= @team.name %>">
    <label>

    <label>
        Image:
        <input type="url" name="image" value="<%= @team.image %>">
    <label>

        <button>Update Team</button>
</form>