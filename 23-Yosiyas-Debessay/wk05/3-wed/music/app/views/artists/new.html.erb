<h1>New Artist</h1>

<%= form_for @artist do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <%= f.label :dob, 'Date of birth' %>
    <%= f.text_field :dob, :placeholder => 'YYYY-MM-DD' %>

    <%= f.label :noa, 'Number of Albums' %>
    <%= f.text_field :noa %>

    <%= f.label :image %>
    <%= f.text_field :image %>

    <%= f.submit %>
<% end %>
