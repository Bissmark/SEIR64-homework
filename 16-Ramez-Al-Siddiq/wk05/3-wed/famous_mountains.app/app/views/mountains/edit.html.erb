<h1>Edit mountain</h1>

<form action="<%= mountain_path(@mountain.id) %>" method="post">
    <label>
        Name:
        <input name="name" required value="<%= @mountain.name %>">
    </label>

    <label>
        Image:
        <input type="url" name="image" value="<%= @mountain.image %>">
    </label>

    <label>
        Location:
        <input type="text" name="location" value="<%= @mountain.location %>">
    </label>

    <label>
        Height:
        <input type="number" name="height" value="<%= @mountain.height %>">
    </label>

    <label>
        Country:
        <input type="text" name="country" value="<%= @mountain.country %>">
    </label>

    <label>
        Temperature:
        <input type="number" name="temperature" value="<%= @mountain.temperature %>">
    </label>

    <button>Update mountain</button>
</form>