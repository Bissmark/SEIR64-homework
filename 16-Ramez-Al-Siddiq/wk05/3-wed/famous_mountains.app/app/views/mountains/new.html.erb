<h1>New mountain</h1>

<form action="<%= mountains_path %>" method="post">
    <label>
        Name:
        <input name="name" required>
    </label>

    <label>
        Image:
        <input type="url" name="image">
    </label>

    <label>
        Location:
        <input type="text" name="location">
    </label>

    <label>
        Height:
        <input type="number" name="height">
    </label>

    <label>
        Country:
        <input type="text" name="country">
    </label>

    <label>
        Temperature:
        <input type="number" name="temperature">
    </label>

    <button>Create mountain</button>
</form>