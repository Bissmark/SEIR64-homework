<h1>Edit team</h1>

<form action="/teams/<%= @team.id %>" method="post">
    <label>
        Name:
        <input name="name" required placeholder="Arsenal F.C." value="<%= @team.name %>">
    </label>

    <label>
        Motto:
        <input name="motto" required placeholder="Victoria Concordia Crescit" value="<%= @team.motto %>">
    </label>

   <label>
        Image:
        <input type="url" name="image" value="<%= @team.image %>">
    </label>

    <button>Update team</button>
</form>