<%= form_for @album do |f| %>
    <%= f.label :name  %>
    <%= f.text_field :name  %>

    <%= f.label :genre  %>
    <%= f.text_field :genre  %>

    <%= f.label :releasedate, 'Release Date'  %>
    <%= f.text_field :releasedate, :placeholder => 'YYYY-MM-DD'  %>

    <%= f.label :lenth  %>
    <%= f.text_field :length  %>

    <%= f.label :image  %>
    <%= f.url_field :image  %>

    <%= f.submit %>
<% end %>