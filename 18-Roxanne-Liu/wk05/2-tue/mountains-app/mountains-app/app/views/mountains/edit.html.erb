<h1>Edit mountain</h1>

<form action="<%= mountain_path(@mountain.id) %>" method="post">
    <label>
        Name:
        <input name="name" required value="<%= @mountain.name %>">
    </label>

    <label>
        Elevation:
        <input type="number" name="elevation" value="<%= @mountain.elevation %>">
    </label>

    <label>
        Country:
        <input name="country" value="<%= @mountain.country %>">
    </label>

    <label>
        Image:
        <input type="url" name="image" value="<%= @mountain.image %>">
    </label>

    <button>Update mountain</button>
</form>