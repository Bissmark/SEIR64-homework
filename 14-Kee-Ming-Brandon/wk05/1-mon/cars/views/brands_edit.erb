<h1>Edit Brand Info</h1>

<form action="/brands/<%= @brand.id %>" method="post">
    <label>
        Brand: 
        <input type="text" name="name" required value="<%= @brand.name %>">
    </label>
    <br>
    <label>
        Origin: 
        <input type="text" name="origin" value="<%= @brand.origin %>">
    </label>
    <br>
    <label>
        Logo: 
        <input type="url" name="logo" value="<%= @brand.logo %>">
    </label>
    <br>
    <br>
    <button>Update Brand</button>
</form>