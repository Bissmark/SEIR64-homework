
<%= form_for @player do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :nationality %>
<%= f.text_field :nationality %>

<%= f.label :dob %>
<%= f.text_field :dob, :placeholder => 'YYYY-MM-DD' %>

<%= f.label :present_club %>
<%= f.text_field :present_club %>

<%= f.label :image %>
<%= f.text_field :image %>

<%= f.submit %>
<% end%>