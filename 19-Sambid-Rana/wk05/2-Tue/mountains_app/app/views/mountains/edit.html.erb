
<h1>Edit details of - <%= @mountain.name %></h1>
<form action="<%= mountains_path(@mountain.id) %>" method="post">
    <label>
        Name:
        <input name="name" required value="<%= @mountain.name%>">
    </label>
    <label>
        Location:
        <input name="location" value="<%= @mountain.location%>">
    </label>
    <label>
        Elevation:
        <input type="number" name="elevation" value="<%= @mountain.elevation %>">
    </label>
    <label>
        First ascent by:
        <input  name="first_ascent" value="<%= @mountain.first_ascent %>">
    </label>
    <label>
        Image:
        <input type="url" name="image" value="<%= @mountain.image %>">
    </label>

    <div>
        <button>Update</button>
    </div>
</form>