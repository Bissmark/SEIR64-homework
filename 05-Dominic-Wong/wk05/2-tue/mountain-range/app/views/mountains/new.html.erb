<h1>New Mountain</h1>

<form action="<%= mountains_path %>" method="post"> 
    <label>
        Name:
        <input name="name" required>
    </label>

    <label>
        Image:
        <input type="url" name="image">
    </label>

    <label>
        Elevation:
        <input type="number" name="elevation">
    </label>

    <label>
        Range:
        <input name="range">
    </label>

    <label>
        Continent:
        <input name="continent">
    </label>

    <button>Create!</button>

</form>

