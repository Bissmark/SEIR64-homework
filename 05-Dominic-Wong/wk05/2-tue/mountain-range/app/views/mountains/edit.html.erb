<h1>Update Mountain</h1>

<form action="<%= mountain_path(@mountain.id) %>" method="post"> 
    <label>
        Name:
        <input name="name" required value="<%= @mountain.name %>">
    </label>

    <label>
        Image:
        <input type="url" name="image" value="<%= @mountain.image %>">
    </label>

    <label>
        Elevation:
        <input type="number" name="elevation" value="<%= @mountain.elevation %>">
    </label>

    <label>
        Range:
        <input name="range" value="<%= @mountain.range %>">
    </label>

    <label>
        Continent:
        <input name="continent" value="<%= @mountain.continent %>"> 
    </label>

    <button>Update!</button>

</form>

