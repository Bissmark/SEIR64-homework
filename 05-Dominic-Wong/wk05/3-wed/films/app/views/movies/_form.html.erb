<%= form_for @movie do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :release, 'Release Year' %>
    <%= f.text_field :release %>

    <%= f.label :box_office %>
    <%= f.text_field :box_office %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <%= f.label :image %>
    <%= f.url_field :image %>

    <%= f.submit %>
<% end %>