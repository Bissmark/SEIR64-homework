<h1>Update Team</h1>

<form action="/teams/<%= @team["id"] %>" method="post">
    <label>
        Name:
        <input name="name" required placeholder="Indiana Pacers" value="<%= @team["name"] %>">
    </label>

    <label>
        City:
        <input name="city" placeholder="Indianapolis" value="<%= @team["city"] %>">
    </label>

    <label>
        Image:
        <input type='url' name="image" value="<%= @team["image"] %>">
    </label>
    <button>Update Team</button>
</form>