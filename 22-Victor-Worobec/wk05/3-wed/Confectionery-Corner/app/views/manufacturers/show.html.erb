<h1><%= @manufacturer.name %></h1>

<%= image_tag @manufacturer.image, :alt => "#{ @manufacturer.name }", :class => 'feature' if @manufacturer.image.present?%>

<ul>
    <li>Founded: <%= @manufacturer.founded %></li>
    <li>Founder: <%= @manufacturer.founder %></li>
    <li>Country: <%= @manufacturer.country %></li>
</ul>

<div class="controls">
    <%= link_to "Edit manufacturer", edit_manufacturer_path(@manufacturer) %>
    <%= link_to "Delete manufacturer", @manufacturer, :method => :delete, :data => { :confirm => 'Are you sure?'} %>
</div>