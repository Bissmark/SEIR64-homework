<form action="/artists/<%= @artist.id %>" method="post">

    <label>

        Name:
        <input name="name" placeholder="Bob" value="<%= @artist.name %>" required>

    </label>

    <label>
    
        Alive:
        <input name="alive" placeholder="0 (false) / 1 (true)" value="<%= @artist.alive %>">

    </label>

    <label>
    
        Image Link:
        <input name="image" type="url" value="<%= @artist.image %>">
    
    </label>

    <button>Edit artist</button>

</form>