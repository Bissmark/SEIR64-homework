<div class="controls">

        <a href="/songs/<%= @song["id"] %>/edit">Edit song</a>
        <a href="/songs/<%= @song["id"] %>/delete">Delete song</a>

</div>

<h1>

    <%= @song.name %>

</h1>

<h2>

    Artist:
    #<%= @song.artist.id %>
    <%= @song.artist.name %>

</h2>

<h2>

    Genre:
    <%= @song.genre %>

</h2>

<h2>

    Duration:
    <%= @song.duration %> (minutes)

</h2>
 
 <% unless @song.youtube.empty? %>

    <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @song.youtube %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
 
 <% end %>