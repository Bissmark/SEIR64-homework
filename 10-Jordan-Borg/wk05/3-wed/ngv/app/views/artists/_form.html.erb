<%= form_for @artist do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :nationality %>
<%= f.text_field :nationality %>

<%= f.label :dob, %>
<%= f.text_field :dob, :placeholder => 'YYYY-MM-DD' %>

<%= f.label :style %>
<%= f.text_field :style %>

<%= f.label :image %>
<%= f.url_field :image %>

<%= f.submit %>

<% end %>