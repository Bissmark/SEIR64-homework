<h1>Edit Celestial Object</h1>

<form action="<%= asteroid_path(@asteroid.id) %>" method="post">
    <label>
        Name:
        <input type="text" name="name" required value="<%= @asteroid.name %>">
    </label>
    <label>
        Designation:
        <input type="text" name="designation" value="<%= @asteroid.designation %>">
    </label>
    <label>
        Image:
        <input type="url" name="image" value="<%= @asteroid.image %>">
    </label>
    <label>
        Orbit:
        <input type="text" name="orbit" value="<%= @asteroid.orbit %>">
    </label>
    <label>
        Size:
        <input type="number" name="size" value="<%= @asteroid.size %>">
    </label>
    <label>
        Funfact:
        <input type="text" name="funfact" value="<%= @asteroid.funfact %>">
    </label>

    <button>Update Celestial Object!</button>
</form>

