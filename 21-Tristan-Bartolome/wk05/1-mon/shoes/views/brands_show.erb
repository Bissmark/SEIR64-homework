<h1>
    <%= @brand["company"] %>
</h1>

<h2>
    <%= @brand["category"] %>
</h2>

<% unless @brand["image"].nil? || @brand["image"].empty? %>
<img class="feature" src="<%= @brand["image"] %>" alt="<%= @brand["company"] %>">
<% end %>

<div class="controls">
    <a href="/brands/<%= @brand["id"] %>/edit">Edit brand</a>
    <a href="/brands/<%= @brand["id"] %>/delete">Delete brand</a>
</div>
