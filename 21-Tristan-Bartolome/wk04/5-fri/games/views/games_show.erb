<h1>
    <% @game["name"] %>
</h1>

<h2>
    <%= @game["genre"] %>
</h2>

<% unless @game["image"].nil? || @game["image"].empty? %>
<img class="feature" src="<%= @game["image"] %>" alt="<%= @game["name"] %>">
<% end %>

<div class="controls">
    <a href="/games/<%= @game["id"] %>/edit">Edit game</a>
    <a href="/games/<%= @game["id"] %>/delete">Delete game</a>
</div>