<h1>New Mountain</h1>

<form action="<%= mountains_path %>" method ="post">
    <label>
    Name:
    <input name="name" required>
    </label>

    <label>
    Image: 
    <input type="url" name="image">
    </label>

    <label>
        height:
        <input type="number" name="height">
    </label>

    <label>
        country:
        <input type="text" name="country">
    </label>

    <label >
        The first year someone climbed
        <input type="number" name="firt_year_climbed">
    </label>

    <button>Create mountain</button>
</form>