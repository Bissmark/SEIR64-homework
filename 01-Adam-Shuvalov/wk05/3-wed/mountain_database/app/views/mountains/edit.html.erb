<h1>Edit Mountain</h1>

<form action=<%= mountain_path(@mountain.id) %> method="post">

    <label>
        Mountain:
        <input name="name" value="<%= @mountain.name %>" required>
    </label>

    <label>
        Height:
        <input type="number" name="height" value="<%= @mountain.height %>" required>
    </label>

    <label>
        Location:
        <input name="location" value="<%= @mountain.location %>" required>
    </label>

    <label>
        Image URL:
        <input type="url" name="image" value="<%= @mountain.image %>">
    </label>

    <button>Submit chage</button>
</form>