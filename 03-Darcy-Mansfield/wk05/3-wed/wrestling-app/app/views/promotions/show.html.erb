<h1><%= @promotion.promotion %></h1>

<%= image_tag @promotion.logo, :class => 'logo_full' if @promotion.logo.present? %>

<div class="info">
    <p>Country: <%= @promotion.country %></p>
    <p>Year started: <%= @promotion.year %></p>
    <p><%= link_to 'Instagram', @promotion.instagram %></p>
</div>
 
<%= link_to "Edit Promotion", edit_promotion_path(@promotion) %>
<%= link_to "Delete Promotion", promotion_path(@promotion), :method => :delete, :data => { :confirm => 'Are you sure?' } %>
